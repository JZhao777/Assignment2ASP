@page
@model Assignment2.Pages.ProductListModel
@{
    ViewData["Title"] = "Fruits List";
}

<h1> Fruit List</h1>
<div class="row products">
    @foreach (var product in Model.Fruits)
        {

        <div class="card col-sm-6 col-md-4">
            <div>
            <img src="@product.Image" class="card-img">
            </div>
            <div class="card-body text-center">
                <h4 class="card-title">@product.Name</h4>
            </div>
        </div>
    }
</div>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Color</th>
            <th scope="col">Image</th>
            <th scope="col">Taste</th>
            <th scope="col">Origin</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.Fruits)
            {
            <tr>
                <th scope="row">@product.Name</th>
                @*Add all attributes*@
                <td>@product.Color</td>
                @*Modify image size below*@
                <td><img class="w-100 list-img" src="@product.Image" alt="Product Image"></td>
                <td>@product.Taste</td>
                <td>@product.Origin</td>
            </tr>

        }
    </tbody>
</table>
